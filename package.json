{
  "name": "book-chainsaw",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "serve:ssr:book-chainsaw": "node dist/book-chainsaw/server/server.mjs",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --format=json --output-file=eslint-report.json",
    "sonar:check": "node scripts/sonar-check.js",
    "quality:gate": "node scripts/quality-gate.js",
    "security:scan": "node scripts/security-scan.js",
    "metrics:report": "node scripts/metrics-report.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/common": "21.1.0",
    "@angular/compiler": "21.1.0",
    "@angular/core": "21.1.0",
    "@angular/forms": "21.1.0",
    "@angular/platform-browser": "21.1.0",
    "@angular/platform-server": "21.1.0",
    "@angular/router": "21.1.0",
    "@angular/ssr": "21.1.0",
    "bootstrap": "5.3.2",
    "express": "5.1.0",
    "rxjs": "7.8.0",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@angular/build": "21.1.0",
    "@angular/cli": "21.1.0",
    "@angular/compiler-cli": "21.1.0",
    "@angular-eslint/builder": "21.0.0",
    "@angular-eslint/eslint-plugin": "21.0.0",
    "@angular-eslint/eslint-plugin-template": "21.0.0",
    "@angular-eslint/schematics": "21.0.0",
    "@angular-eslint/template-parser": "21.0.0",
    "@eslint/js": "9.0.0",
    "@types/express": "5.0.1",
    "@types/node": "20.17.19",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "autoprefixer": "10.4.17",
    "eslint": "9.0.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.0.0",
    "vitest": "4.0.8"
  }
}
